---
import "../styles/tailwind.css";
const { title = 'Asistente Domótico', description = 'Controla tu hogar inteligente', } = Astro.props;
---

<html lang="es" class="h-full">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="h-full text-gray-900 flex flex-col">
		<header class="backdrop-blur-md bg-white/10 border-b border-white/20 flex-shrink-0">
			<div class="mx-auto max-w-4xl px-3 sm:px-4 lg:px-6 py-3 sm:py-4 flex items-center justify-between">
				<a href="/" class="font-bold text-lg sm:text-xl text-white flex items-center gap-2 hover:scale-105 transition-transform">
					<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
						<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
					</svg>
					Asistente Domótico
				</a>
			</div>
		</header>

		<main class="flex-1 mx-auto max-w-4xl w-full py-4 sm:py-6 lg:py-8 min-h-0 overflow-hidden">
			<slot />
		</main>

		<footer class="backdrop-blur-md bg-white/10 border-t border-white/20 flex-shrink-0">
			<div class="mx-auto max-w-4xl px-3 sm:px-4 lg:px-6 py-4 sm:py-6 text-center text-xs sm:text-sm text-white/80">
				© {new Date().getFullYear()} Asistente Domótico - Tu hogar inteligente te espera ✨
			</div>
		</footer>
	</body>
</html>


